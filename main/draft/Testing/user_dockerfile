from ubuntu 

RUN apt update
RUN apt install -y python3 python3-pip systemctl cron nano vim dos2unix
RUN mkdir /data/

RUN pip3 install --upgrade pip
RUN pip3 install pandas requests

WORKDIR /app
COPY upload.py .
COPY init.sh .
COPY test.crontab .
RUN chmod +x /app/init.sh

RUN dos2unix /app/init.sh
RUN dos2unix /app/test.crontab

RUN crontab /app/test.crontab

ENTRYPOINT ["/app/init.sh"]
